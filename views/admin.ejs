<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page</title>
</head>
<body>
    <h1>Order Summary</h1>
    <table id="order-table" class="display">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Method</th>
                <th>Toppings</th>
                <th>Size</th>
                <th>Comments</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
    <% orders.forEach(order => { %> 
        <tr>
            <td><%= order.fname%> <%= order.lname%></td>
            <td><%= order.email%></td>
            <td><%= order.method%></td>
            <td><%= order.toppings%></td>
            <td><%= order.size%></td>
            <td><%= order.comment%></td>
            <td><%= order.timestamp.toLocaleString() %></td>
        </tr>
        <% }) %>
        </tbody>
    </table>
    
</body>
</html>